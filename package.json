{
  "name": "stitch-trainer-management-portal",
  "version": "1.0.0",
  "description": "Training-verified, shift-based workforce platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npx react-native run-android",
    "dev:web": "cd web && npm start",
    "build": "npm run build:backend && npm run build:mobile && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:web": "cd web && npm run build",
    "test": "npm run test:backend && npm run test:mobile && npm run test:web",
    "test:backend": "cd backend && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:web": "cd web && npm test"
  },
  "keywords": ["react-native", "nodejs", "training", "workforce", "shift"],
  "author": "Stitch Trainer Management Portal",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}